<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dependencies</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>com.github.ben-manes.caffeine:*</exclude>
                <exclude>com.zaxxer:*</exclude>
                <exclude>io.micrometer:*</exclude>
                <exclude>io.prometheus:*</exclude>
                <exclude>${project.groupId}:jdbcx-core</exclude>
                <exclude>${project.groupId}:jdbcx-driver</exclude>
                <exclude>${project.groupId}:jdbcx-server</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>